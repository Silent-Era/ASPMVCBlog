@{
    ViewBag.Title = "Home Page";
}
@using ASPMVCBlog.Models
@model List<Post>

<div class="row">
    @if (Model.Count > 0)
    {
        foreach (var post in Model)
        {
        <div class="col-md-8">
            <h2>@post.PostTitle</h2>
        </div>
        }
    }
    else
    {
        <h1>No posts yet. Be the first to write one? :)</h1>
    }
</div>
