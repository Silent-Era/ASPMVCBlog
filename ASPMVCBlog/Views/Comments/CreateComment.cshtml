@model ASPMVCBlog.Models.Comment

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @if (!User.Identity.IsAuthenticated)
        {
        <div class="form-group" style="padding-top:10px">
            @Html.LabelFor(model => model.AuthorStr, "Your name:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(model => model.AuthorStr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AuthorStr, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        @*else
        {
            //Model.AuthorId = User.Identity.GetUserId();
           
        }*@
        
            <div class="form-group" >
                @Html.LabelFor(model => model.AuthorStr, "Your comment:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.CommentBody, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CommentBody, "",new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Comment" class="btn btn-default" />
            </div>
        </div>
    </div>
}
