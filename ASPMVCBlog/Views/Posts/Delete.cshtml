@model ASPMVCBlog.Models.Post

@{
    ViewBag.Title = "Delete";
}

<h2 style="margin-left:20%">Delete Post:</h2>

<h3 style="margin-left:8%">Are you sure you want to delete this?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Post title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostTitle)
        </dd>

        <dt>
           Post body:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostBody)
        </dd>

        <dt>
           Post created on:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostDate)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:20%">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
